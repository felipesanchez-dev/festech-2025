---
import sponsorsData from '@/data/sponsors.json'
import Container from '../components/ui/Container.astro'
import { Image } from 'astro:assets'
---

<section id="sponsors" class="bg-white text-black flex flex-col font-clash scroll-mt-28">
  <Container>
    <div class="flex items-center justify-between gap-12 mb-12 flex-col md:flex-row px-section">
      <div class="flex-1">
        <h3 class="text-5xl xs:text-6xl font-medium text-balance">
          Agradecemos la confianza de los que están ayudando a que este proyecto se lleve a cabo
        </h3>
      </div>
    </div>
    <p class="text-gray-500 uppercase mb-4">Organizador</p>

    <a
      class="group hover:bg-white transition py-6 px-12 mb-12 flex items-center justify-center w-full"
      href="https://alianzatic.org"
      target="_blank"
      rel="noopener noreferrer"
    >
      <Image
        width={428.12}
        height={96}
        src="https://alianzatic.org/wp-content/uploads/2023/06/Logo-header.png"
        alt="sponsor top"
        class="h-24 object-contain group-hover:scale-105 transition-all duration-300"
        aria-label="Visita Alianza TIC"
      />
    </a>

    <p class="text-gray-500 uppercase mb-8">Aliados Estratégicos</p>

    <div class="flex items-center justify-center gap-8 md:gap-16 flex-wrap">
      {
        sponsorsData.map((sponsor) =>
          sponsor.companies.map((company) => (
            <a
              class="flex items-center justify-center p-6 hover:scale-110 transition-transform duration-300 opacity-70 hover:opacity-100"
              href={company.url}
              target="_blank"
              rel="noopener noreferrer"
            >
              <Image
                width={200}
                height={200}
                src={company.image}
                alt={company.name}
                class="object-contain"
              />
            </a>
          ))
        )
      }
    </div>
  </Container>
</section>
